{
  "version": "12.0.1",
  "useWorkspaces": true,
  "packages": ["packages/*"],
  "command": {
    "bootstrap": {
      "npmClientArgs": ["--no-package-lock"],
      "hoist": true
    },
    "publish": {
      "forcePublish": true,
      "conventionalCommits": true,
      "createRelease": "github",
      "message": "chore(release): %s",
      "changelogPreset": "conventionalcommits"
    }
  }
}
